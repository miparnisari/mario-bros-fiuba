# Makefile

CFLAGS = -Wall -Werror -pedantic -pedantic-errors -g -lpthread
CC = g++
OBJ = Socket.o Utilitario.o Hilo.o JugadorRemoto.o HiloEnviarJug.o HiloAceptarJug.o HiloEscucharServer.o HiloEnviarServer.o Evento.o EventoTeclado.o Resolvedor.o

all: client server

Resolvedor.o: Resolvedor.cpp Resolvedor.h
	$(CC) -c $(CFLAGS) $<

Evento.o: Evento.cpp Evento.h
	$(CC) -c $(CFLAGS) $<

EventoTeclado.o: EventoTeclado.cpp EventoTeclado.h
	$(CC) -c $(CFLAGS) $<

Socket.o: Socket.cpp Socket.h
	$(CC) -c $(CFLAGS) $<

Utilitario.o: Utilitario.cpp Utilitario.h
	$(CC) -c $(CFLAGS) $<

Hilo.o: Hilo.cpp Hilo.h
	$(CC) -c $(CFLAGS) $<

JugadorRemoto.o: JugadorRemoto.cpp JugadorRemoto.h
	$(CC) -c $(CFLAGS) $<

HiloEnviarJug.o: HiloEnviarJug.cpp HiloEnviarJug.h
	$(CC) -c $(CFLAGS) $<

HiloEscucharServer.o: HiloEscucharServer.cpp HiloEscucharServer.h
	$(CC) -c $(CFLAGS) $<

HiloEnviarServer.o: HiloEnviarServer.cpp HiloEnviarServer.h
	$(CC) -c $(CFLAGS) $<

HiloAceptarJug.o: HiloAceptarJug.cpp HiloAceptarJug.h
	$(CC) -c $(CFLAGS) $<

server: $(OBJ) server.cpp
	g++ $(CFLAGS) $(OBJ) server.cpp -o server

client: $(OBJ) cliente.cpp
	g++ $(CFLAGS) $(OBJ) cliente.cpp -o client

clean:
	rm *.o server client

